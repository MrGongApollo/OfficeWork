@{
    ViewBag.Title = "XT_Menus";
}

@Styles.Render("~/bundles/bootstrap-table/css")
@Scripts.Render("~/bundles/bootstrap-table/js")

<style>
    .modal-body > .row {
        margin-top: 1em;
        margin-bottom: 1em;
    }
</style>

<script type="text/javascript">
    $(function () {
        var $table = $('#table');
        $table.bootstrapTable({
            url: "@Url.Content("~/XT/GetMenus")",
            toolbar: '#toolbar',    //工具按钮用哪个容器
            showRefresh: false, //是否显示刷新按钮
            dataType: "json",
            method: 'get',
            //ajax: false,
            //ajaxOptions: { headers: { "Accept": "application/json; odata=verbose", "DataServiceVersion": "3.0", "MaxDataServiceVersion": "3.0"} },
            height: $(window).height() - $("#header").height()-200, //table 高度
            striped: true, //是否显示行间隔色
            singleSelect: true, //单选
            sortable: true, //是否启用排序
            showColumns: true, //字段筛选
            dataLocale: "zh-CN", //表格汉化
            search: false, //显示搜索框
            pageSize: 10, //每页的记录行数（*）
            pageList: [10, 15, 20, 25], //分页选择
            pageNumber: 1, //初始化加载第一页，默认第一页
            pagination: true, //分页
            //minimumCountColumns: 2, //最少允许的列数
            clickToSelect: true, //是否启用点击选中行
            queryParamsType: "limit",
            onLoadSuccess: function (xhr) {
                $("[data-toggle]").tooltip();
            },
            onLoadError: function (status) {

            },
            queryParams: function (params) {
                return {
                    offSet: params.offset,
                    orderBy: params.sort||"CreateTime",
                    sortType:params.order,
                    pageSize: params.limit
                };

            },
            sidePagination: "server", //服务端处理分页
            columns: [
                { checkbox: true, align: 'center', valign: 'middle' },
                { title: '菜单名称', field: 'MenuName', align: 'left', valign: 'middle', sortable: true },
                { title: '菜单等级', field: 'MenuLevel', align: 'left', valign: 'middle', sortable: true,
                formatter: function (value) {
                    var _txt = value;
                    switch (value) {
                        case "button":
                            _txt = "一级菜单";
                            break;
                        case "sub_button":
                            _txt = "二级菜单";
                            break;
                    }
                    return _txt;
                }
                },
                { title: '菜单类型', field: 'MenuType', align: 'left', valign: 'middle', sortable: true },
                {
                    title: '创建日期', field: 'CreateTime', align: 'center', valign: 'middle', sortable: true,
                    formatter: function (value) {
                        return $.web.changeDateFormat(value);
                    }
                },
            //{title: '操作',field: 'id',align: 'center',
            //    formatter:function(value,row,index){
            //        var e = '<a href="javascript:;"><i class="fa fa-pencil"></i>编辑</a> ';
            //        var d = '<a href="javascript:;")"><i class="fa fa-close"></i>删除</a> ';
            //        var $el= $("<span>").append($("<a>", { href: "javascript:;" }).text("编辑").prepend($("<i>", { "class": "fa fa-pencil" })))
            //                    .append($("<a>", { href: "javascript:;" }).text("删除").prepend($("<i>", { "class": "fa fa-close" })))
            //        return e+d;
            //    }
            //}
            ]
        });

        //查询
            $("#btn_query").click(function () {
                $table.bootstrapTable('refresh');
            });

            $("#btn_add").click(function () {
                $("#Menus_Modal").modal("show");
            });
    });
</script>

<div class="container-fluid">
    <div class="panel-body" style="padding:0px;">
        <div class="panel panel-default">
            <div class="panel-heading panel-headicon"><i class="fa fa-search"></i> <h5>查询条件</h5></div>

            <div class="panel-body">
                <div class="row margin_tb_5">

                    <div class="col-md-8">
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-calendar"></i>起止日期
                            </span>
                            <input type="text" class="form-control bootstrap-daterangepicker" readonly="readonly" />
                        </div>
                    </div>

                    <div class="col-md-4 text-right">
                        <button type="button" id="btn_query" class="btn btn-primary btn-sm"><i class="fa fa-search"></i> 查询</button>
                        <button type="button" id="btn_reset" class="btn btn-info btn-sm"><i class="fa fa-refresh"></i> 重置</button>
                    </div>
                </div><!-- /.row -->
            </div>

        </div>
    </div>

    <div id="toolbar" class="btn-group">
        <button id="btn_add" type="button" class="btn btn-success btn-sm">
            <span class="fa fa-plus" aria-hidden="true"></span>新增
        </button>
        <button id="btn_edit" type="button" class="btn btn-warning btn-sm">
            <span class="fa fa-pencil" aria-hidden="true"></span>修改
        </button>
        <button id="btn_delete" type="button" class="btn btn-danger btn-sm">
            <span class="fa fa-remove" aria-hidden="true"></span>删除
        </button>
        <button id="btn_powerset" type="button" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-apple" aria-hidden="true"></span>发布
        </button>
    </div>

    <table id="table"></table>
</div>

<div class="modal fade" id="Menus_Modal" tabindex="-1" role="dialog" aria-labelledby="Menus_ModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="Menus_ModalLabel">微信菜单维护</h4>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <label for="txt_defaulturl" class="input-group-addon">菜单代码</label>
                            <input type="text" name="txt_defaulturl" class="form-control" id="txt_defaulturl" placeholder="菜单代码">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon">菜单等级</span>
                            <select class="form-control">
                                <option>--菜单等级--</option>
                                <option>一级菜单</option>
                                <option>二级菜单</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon">菜单类型</span>
                            <select class="form-control">
                                <option>--菜单类型--</option>
                                <option>click</option>
                                <option>view</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-addon">上级菜单</span>
                            <select class="form-control">
                                <option>--请选择上级菜单--</option>
                                <option>一级菜单</option>
                                <option>二级菜单</option>
                            </select>
                        </div>
                    </div>
                    
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group">
                            <label for="txt_defaulturl" class="input-group-addon">默认页面</label>
                            <input type="text" name="txt_defaulturl" class="form-control" id="txt_defaulturl" placeholder="默认页面">
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="input-group">
                            <label for="txt_defaulturl_Web" class="input-group-addon">详细地址</label>
                            <input type="text" name="txt_defaulturl_Web" class="form-control" id="txt_defaulturl_Web" placeholder="请填写url地址">
                        </div>
                    </div>
                </div>
                

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
                <button type="button" id="btn_submit" class="btn btn-primary" data-dismiss="modal"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span>保存</button>
            </div>
        </div>
    </div>
</div>